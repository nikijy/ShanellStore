@model ShanellStore.DataLayer.Entities.Product.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>جزئیات محصول</h1>

<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductBrandId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductBrandId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductColorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductColorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductSizeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductSizeId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>
        @if (Model.IsAvailable == true)
        {
            <dd class = "col-sm-10 text-success">
                <i class="glyphicon glyphicon-ok"></i>
            </dd>
        }
        else
        {
            <dd class = "col-sm-10 text-danger">
                <i class="glyphicon glyphicon-remove"></i>
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class = "col-sm-10">
           <img src="/ProductImages/@Model.ImageName" style="max-width: 100px" class="thumbnail"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        @if (Model.IsDeleted == true)
        {
            <dd class = "col-sm-10 text-success">
                <i class="glyphicon glyphicon-ok"></i>
            </dd>
        }
        else
        {
            <dd class = "col-sm-10 text-danger">
                <i class="glyphicon glyphicon-remove"></i>
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">ویرایش محصول</a>
  
</div>
