@using ShanellStore.Core.Convertors
@model IEnumerable<ShanellStore.Core.DTOs.User.UsersViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
           لیست کاربران
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <a href="/Admin/Users/CreateUser" class="btn btn-success">ایجاد کاربر حدید</a>
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_length" id="dataTables-example_length"><label><select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> records per page</label></div></div>
                        <div class="col-sm-6">
                            <div id="dataTables-example_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control input-sm" aria-controls="dataTables-example"></label></div></div></div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column ascending" style="width: 245.5px;">
                                نام کاربری
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 326.5px;">
                                ایمیل
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 302.5px;">
                                فعال
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 212.5px;">
                                تاریخ ثبت نام
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 161.5px;">
                                دستورات
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeA odd">
                                <td class="sorting_1">@item.UserName</td>
                                <td class=" ">@item.Email</td>
                                @if (item.IsActive)
                                {
                                    <td class="text-success"><i class="glyphicon glyphicon-ok"></i></td>
                                }
                                else
                                {
                                    <td class="text-danger"><i class="glyphicon glyphicon-remove"></i></td>
                                }
                                <td class="center ">@item.RegisterDate.Value.ToShamsi()</td>
                                <td class="center ">
                                    <a href="/Admin/Users/EditUser/@item.UserId" class="btn btn-warning">ویرایش</a>
                                    <a href="/Admin/Users/DeleteUser/@item.UserId" class="btn btn-danger">حذف</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="dataTables_info" id="dataTables-example_info" role="alert" aria-live="polite" aria-relevant="all">Showing 1 to 10 of 57 entries</div>
                        </div>
                        <div class="col-sm-6">
                            @if (ViewBag.count > 1)
                            {
                                <nav>
                                    <ul class="pagination">
                                        @if (ViewBag.PageCount % 12 != 0)
                                        {
                                            @for (int i = 1; i <= ((int) ViewBag.PageCount + 1); i++)
                                            {
                                                <li class="@(((int) ViewBag.PageID == i) ? "active" : "")"><a class="page-link" href="/Admin/Users/Index?pageId=@i">@i</a></li>

                                            }
                                        }

                                        else
                                        {
                                            @for (int i = 1; i <= (int)ViewBag.PageCount; i++)
                                            {
                                                <li class="@(((int)ViewBag.PageID==i)?"active":"")"><a class="page-link" href="/Admin/Users/Index?pageId=@i">@i</a></li>

                                            }
                                        }
                                    </ul>
                                </nav>
                            }                        </div>
                    </div>
                </div>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

