@model ShanellStore.DataLayer.Entities.User.User
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Areas/Users/Views/Shared/_UserLayout.cshtml";
}
<form asp-action="EditUser" method="post">
    <div class="form-group">
        <label for="disabledSelect">ایمیل</label>
        <input class="form-control" id="disabledInput" type="text" placeholder="@Model.Email" disabled="">
    </div>

    <div class="form-group">
        <label>نام کاربری</label>
        <input type="text" class="form-control" placeholder="@Model.UserName">
    </div>

    <div class="form-group">
        <label>کلمه عبور</label>
        <input type="password" class="form-control">
    </div>

    <div class="form-group">
        <label>تکرار کلمه عبور</label>
        <input type="password" class="form-control">
    </div>
    <input type="submit" class="btn btn-success" value="ثبت تغییرات"/>
</form>