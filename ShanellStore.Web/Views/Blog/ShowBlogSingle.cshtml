
@using ShanellStore.Core.Convertors
@model ShanellStore.DataLayer.Entities.Blog.Blog
@{
    ViewData["Title"] = "ShowBlogSingle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="agileinfo_single">
    <div class="col-md-4 agileinfo_single_right">
        <img id="example" src="/BlogImages/@Model.ImageName" alt=" " class="img-responsive" style="height: 350px; width: 350px;">
    </div>
    <div class="col-md-8 agileinfo_single_left">
        <div class="w3agile_description">
            <h4>توضیحات :</h4>
            <p>
                @Model.Description
            </p>
        </div>
        <div class="snipcart-item block">
            <div class="snipcart-thumb agileinfo_single_left_snipcart">
                <hr />

                <p>@Model.CreateDate.Value.ToShamsi()</p>
            </div>

        </div>
    </div>
    <div class="clearfix"> </div>
</div>

